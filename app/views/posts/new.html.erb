<h2>Create a new Message Here</h2>

<%= form_with model: @message, local: true do |f|%>
    <p>
        <%=f.label :title%><br>
        <%=f.text_field :title, placeholder: 'Your title'%>
    </p>
    <p>
        <%=f.label :message%><br>
        <%=f.text_area :title, placeholder: 'Write your message Here', size: "60x12" %>
    </p>

    <p>
        <%=f.submit%>
    </p>
  
<% end %>